<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<LinearLayout
    android:id="@+id/content_wrapper"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/list_item_image"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_photo_black_24dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Name"
            android:textSize="21sp"
            android:textColor="@android:color/black"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/list_item_expire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiration"
            android:textSize="18sp"
            android:layout_margin="4dp"/>

    </LinearLayout>

</LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_navigate_next_black_24dp"
        android:layout_alignRight="@id/content_wrapper"
        android:layout_centerVertical="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/content_wrapper"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

</RelativeLayout>